  "type": "module",
  "main": "dist/main.js",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "files": [
    "dist/"
  ],
  "exports": {
    ".": "./dist/main.js",
    "./argon2": "./dist/wasm/argon2.js",
    "./bcrypt": "./dist/wasm/bcrypt.js",
    "./hmac": "./dist/wasm/hmac.js",
